{
    "compilerOptions": {
        "target": "ES2022",
        "module": "commonjs",
        "lib": [
            "ES2022"
        ],
        "outDir": "./dist",
        "rootDir": ".",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "moduleResolution": "node",
        "noUnusedLocals": false,
        "noUnusedParameters": false
    },
    "include": [
        "src/**/*",
        "prisma/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "**/__tests__/**",
        "**/*.test.ts",
        "**/*.spec.ts"
    ]
}